<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BookCatalogue.MauiGUI.MainPage">

    <ScrollView>
        <VerticalStackLayout
            VerticalOptions="CenterAndExpand" 
            HorizontalOptions="CenterAndExpand" 
            Padding="20"
            Spacing="25">
            <Label Text="Welcome to Book Catalogue" FontSize="Large" HorizontalOptions="Center" Margin="0,0,0,20"/>
            <Button Text="Browse Books" Clicked="OnBrowseBooksClicked"/>
            <Button Text="Add New Book" Clicked="OnAddNewBookClicked" Margin="0,20,0,0"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
